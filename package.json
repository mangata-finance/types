{
  "name": "@mangata-finance/types",
  "version": "0.0.9",
  "description": "Polkadot.js type definitions for Mangata Network",
  "author": "Mangata Finance <solutions@mangata.finance>",
  "main": "build/index.js",
  "types": "build/types/index.d.ts",
  "license": "GPL-3.0",
  "scripts": {
    "build": "rm -fr build/* && tsc --project tsconfig.json",
    "buildTypes": "yarn generate:defs && yarn generate:meta",
    "generate:defs": "ts-node --skip-project node_modules/.bin/polkadot-types-from-defs --package @mangata-finance/types/interfaces --input ./src/interfaces --endpoint ./metadata.json",
    "generate:meta": "ts-node --skip-project node_modules/.bin/polkadot-types-from-chain --package @mangata-finance/types/interfaces --endpoint ./metadata.json --output ./src/interfaces"
  },
  "keywords": [
    "mangata",
    "types"
  ],
  "devDependencies": {
    "@polkadot/typegen": "^7.13.1",
    "@types/node": "^17.0.22",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@polkadot/api": "^7.13.1"
  }
}
